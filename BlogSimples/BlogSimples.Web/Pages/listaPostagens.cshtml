@page
@model BlogSimples.Web.Pages.listaPostagensModel

@{
    ViewData["Title"] = "listaPostagens";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>listaPostagens</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Postagem[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postagem[0].Postage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Postagem[0].DataCriacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Postagem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Postage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataCriacao)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.PostId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PostId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PostId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
